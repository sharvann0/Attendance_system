            <!-- Submit button -->
            <form action="/submit-attendance" method="POST">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Roll Number</th>
                            <th>Student Name</th>
                            <th>Attendance Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.roll_number %></td>
                            <td><%= student.name %></td>
                            <td>
                                <div class="attendance-options">
                                    <div class="form-check">
                                        <input 
                                            class="form-check-input" 
                                            type="radio" 
                                            name="attendance[<%= student.student_id %>][status]" 
                                            id="present_<%= student.student_id %>" 
                                            value="Present" 
                                            required>
                                        <label class="form-check-label" for="present_<%= student.student_id %>">Present</label>
                                    </div>
                                    <div class="form-check">
                                        <input 
                                            class="form-check-input" 
                                            type="radio" 
                                            name="attendance[<%= student.student_id %>][status]" 
                                            id="absent_<%= student.student_id %>" 
                                            value="Absent">
                                        <label class="form-check-label" for="absent_<%= student.student_id %>">Absent</label>
                                    </div>
                                </div>
                                <input type="hidden" name="attendance[<%= student.student_id %>][roll_number]" value="<%= student.roll_number %>">
                                <input type="hidden" name="attendance[<%= student.student_id %>][student_id]" value="<%= student.student_id %>">
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary mt-3">Submit Attendance</button>
            </form>
            
